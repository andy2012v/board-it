            <h5>Help</h5>
            <ul class="menu vertical">
              <li><a href="#">FAQs</a></li>
            </ul>
          </div>
        </div>
      </div>
        <div class="small-12 medium-12 large-6 columns">

         <div class="row">
           <div class="small-4 medium-4 large-4 columns">
            <h5>My Account</h5>
            <ul class="menu vertical">
              <% if user_signed_in? %>

                <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'footer_sign_out' %></li>
              <% else %>
                <li><%= link_to 'Sign Up', new_user_registration_path, class: 'footer_sign_up'%></li>
                <li><%= link_to 'Sign In', new_user_session_path, class: 'footer_sign_in' %></li>
              <% end %>
            </ul>
          </div>

            <div class="small-4 medium-4 large-4 columns">
                  <h5>Social</h5>
                  <ul class="menu vertical">
                    <li><%= link_to 'Facebook', "https://www.facebook.com/"%></li>
                    <li><%= link_to 'Twitter', "https://twitter.com/"%></li>
                  </ul>
                </div>
               </div>
              </div>
            </div>
            <div class="ecommerce-footer-bottom-bar row">
              <div class="small-12 medium-5 columns">
                <ul class="bottom-links">
                  <li><a href="#">Privacy Policy</a></li>
